<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="300dp"
    android:orientation="vertical"
    android:padding="@dimen/screen_edge_margin">


    <TextView
        android:id="@+id/speaker_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/list_element_margin"
        android:drawablePadding="@dimen/list_element_margin"
        android:gravity="center_vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:text="Speaker data" />


    <TextView
        android:id="@+id/speaker_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_element_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="Bio" />

</LinearLayout>