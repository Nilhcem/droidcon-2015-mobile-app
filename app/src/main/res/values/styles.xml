<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:listDivider">@color/dividerColor</item>
    </style>

    <style name="DrawerHeader">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title.Inverse</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">@dimen/screen_edge_margin</item>
        <item name="android:layout_marginBottom">@dimen/screen_edge_margin</item>
    </style>

    <style name="Content">
        <item name="android:layout_margin">@dimen/screen_edge_margin</item>
    </style>

</resources>
