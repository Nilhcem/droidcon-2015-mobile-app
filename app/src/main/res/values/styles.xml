<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:listDivider">@color/dividerColor</item>
    </style>

    <style name="DrawerHeader">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title.Inverse</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">@dimen/screen_edge_margin</item>
        <item name="android:layout_marginBottom">@dimen/screen_edge_margin</item>
    </style>

    <style name="Content">
        <item name="android:layout_margin">@dimen/screen_edge_margin</item>
    </style>

    <style name="SlotViewHour">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/screen_edge_margin</item>
        <item name="android:layout_marginTop">@dimen/screen_edge_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="SlotViewClickableArea">
        <item name="android:layout_weight">3</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/screen_edge_margin</item>
        <item name="android:layout_marginRight">@dimen/screen_edge_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/slot_background</item>
    </style>

    <style name="SlotViewTitle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/screen_edge_margin</item>
        <item name="android:layout_marginRight">@dimen/screen_edge_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="SlotStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:layout_marginTop">@dimen/list_element_margin</item>
    </style>

    <style name="eventDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/slot_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/accentColor</item>
        <item name="android:layout_marginBottom">@dimen/list_element_margin</item>
        <item name="android:layout_marginTop">@dimen/list_element_margin</item>
    </style>

    <style name="map_and_info_container">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="map_and_info_base">
        <item name="android:textColor">@color/textColorPrimary</item>


    </style>

    <style name="map_and_info_header" parent="map_and_info_base">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="map_and_info_description" parent="map_and_info_base">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="map_and_info_place_title" parent="map_and_info_base">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="map_and_info_open_action" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_backgroud</item>
        <item name="android:textColor">@color/textColorHeader</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="map_and_info_place_address" parent="map_and_info_base"/>

    <style name="IconButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/iconify_selector</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">@dimen/list_element_margin</item>
        <item name="android:paddingLeft">@dimen/list_element_margin</item>
        <item name="android:textSize">24dp</item>
    </style>
</resources>
